<div class="photo-flex-section">
  <div class="photo-flex-section--top-row">
    <div class="photo-flex-section--top-row--left-container">
      <div class="photo-flex-section--top-row--left-container--content">
        {% for block in section.blocks %}
          {% if section.blocks.settings.heading != blank %}
            <h2>{{ section.blocks.settings.heading }}</h2>
          {% endif %}
          {% if section.blocks.settings.sub_heading != blank %}
            <p>{{ section.blocks.settings.sub_heading }}</p>
          {% endif %}
        {% endfor %}
      </div>
      <div class="photo-flex-section--top-row--left-container--image">
        {% if section.blocks.settings.image_desktop != blank and section.blocks.settings.image_mobile != blank %}
          {% render 'responsive-picture'
            ,
 desktopImage: section.blocks.settings.image_desktop
            ,
 mobileImage: section.blocks.settings.image_mobile
          %}
        {% endif %}
      </div>
    </div>
    <div class="right-container"></div>
  </div>
  <div class="bottom-row"></div>
</div>


{% schema %}
  {
    "name": "Photo flex",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Photo flex section"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "row",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Desktop image",
            "info": "Recommended dimensions: 1440 x 600"
          },
          {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Mobile image",
            "info": "Recommended dimensions: 600 x 400"
          },
          {
            "type": "richtext",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub Heading"
          }, {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Shop Now"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Photo flex"
      }
    ]

  }
{% endschema %}