







{% schema %}
    {
      "name": "",
      "tag": "section",
      "settings": [
        {
          "type": "header",
          "content": "Slider options"
        },
        {
          "type": "checkbox",
          "label": "Enable autoplay",
          "id": "auto_play",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show dots",
          "id": "show_pagination",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Show arrows",
          "id": "show_arrows",
          "default": true
        },
        {
          "type": "range",
          "label": "Autoplay duration",
          "id": "auto_play_duration",
          "default": 1000,
          "min": 1000,
          "max": 5000,
          "step": 1000,
          "unit": "sec"
        },
        {
          "type":"select",
          "label":"Slider animation",
          "id":"slide_type",
          "default":"slide",
          "options":[
            {
              "label":"Fade",
              "value":"fade"
            },
            {
              "label":"Loop",
              "value":"loop"
            },
            {
              "label":"Slide",
              "value":"slide"
            }
          ]
        },
        {
          "type": "header",
          "content": "Section padding"
        },
        {
          "type": "range",
          "label": "Padding Top",
          "id": "padding_top",
          "default": 30,
          "min": 0,
          "max": 100,
          "step": 2,
          "unit": "px"
        },
        {
          "type": "range",
          "label": "Padding Bottom",
          "id": "padding_bottom",
          "default": 30,
          "min": 0,
          "max": 100,
          "step": 2,
          "unit": "px"
        }
      ],
      "blocks": [
        {
          "type": "slide",
          "name": "Slide",
          "settings": [
            {
          "type": "image_picker",
          "label": "Image",
          "id": "image",
          "info": "Image for Desktop"
        },
        {
          "type": "image_picker",
          "label": "Image (Mobile)",
          "id": "image_mobile",
          "info": "Image For Mobile"
        },
         {
          "type": "text",
          "label": "Pre heading",
          "id": "pre_heading",
          "default": "Trendy Classics"
        },
        {
          "type": "richtext",
          "label": "Heading",
          "id": "heading",
          "default": "<p>Discover Signature Look: Fashion Forward and Fabulous!</p> "
        },
        {
          "type": "text",
          "label": "Button Label",
          "id": "button_label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "label": "Button link",
          "id": "button_url"
        },
        {
          "type": "select",
          "label": "Desktop Content Position",
          "id": "desktop_content_position",
          "default": "middle-center",
          "options": [
            {
              "label": "Top left",
              "value": "top-left"
            },
            {
              "label": "Top center",
              "value": "top-center"
            },
            {
              "label": "Top right",
              "value": "top-right"
            },
            {
              "label": "Middle left",
              "value": "middle-left"
            },
            {
              "label": "Middle center",
              "value": "middle-center"
            },
            {
              "label": "Middle right",
              "value": "middle-right"
            },
            {
              "label": "Bottom left",
              "value": "bottom-left"
            },
            {
              "label": "Bottom center",
              "value": "bottom-center"
            },
            {
              "label": "Bottom right",
              "value": "bottom-right"
            }
          ]
        },
        {
          "type": "select",
          "label": "Desktop Text Allignment",
          "id": "desktop_text_allignment",
          "options": [
            {
              "label": "Left",
              "value": "left"
            },
            {
              "label": "Center",
              "value": "center"
            },
            {
              "label": "Right",
              "value": "right"
            }
          ]
        },
          {
            "type":"color_scheme",
            "id":"color_scheme",
            "label":"Color Scheme",
            "default":"background-1"
          }
          ]
        }
      ],
      "presets": [
        {
          "name": "Custom SlideShow"
        }
      ]
    }
    {% endschema %}