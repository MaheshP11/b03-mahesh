        "label": "Heading",
        "default": "Background Image"
      }, {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Desktop image",
        "info": "Recommended dimensions: 1440 x 600"
      }, {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile image",
        "info": "Recommended dimensions: 600 x 400"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Popup Section"
      }
    ]
  }
{% endschema %}